{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

<i class="icon-hand-right"></i>
<a href="{{ path('fos_user_registration_register')}}">Pas encore inscrit ?</a>
<hr class="divider" />

{% if error %}
    <div class="alert alert-error">
    {{ error|trans({}, 'FOSUserBundle') }}
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
	
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
    <input type="password" id="password" name="_password" required="required" />

    
    <label for="remember_me" class="checkbox required remember_me">
    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    	{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
    </label>
    
    <a class="inline-block smaller forgot_password" href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
    
    <div>
    <input type="submit" class="btn btn-success" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
    
</form>
{% endblock fos_user_content %}
