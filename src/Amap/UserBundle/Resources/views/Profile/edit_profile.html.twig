        #}
        
        <div class="control-group">
            {{ form_label(form.firstname, 'label_profile_firstname' | trans({}, 'SonataUserBundle'), {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">{{ form_widget(form.firstname) }}</div>
        </div>
        <div class="control-group">
            {{ form_label(form.lastname, 'label_profile_lastname' | trans({}, 'SonataUserBundle'), {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">{{ form_widget(form.lastname) }}</div>
        </div>
        <div class="control-group">
            {{ form_label(form.website , 'label_profile_website' | trans({}, 'SonataUserBundle'), {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">{{ form_widget(form.website) }}</div>
        </div>
        <div class="control-group">
            {{ form_label(form.dateOfBirth, 'label_profile_dob' | trans({}, 'SonataUserBundle'), {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">{{ form_widget(form.dateOfBirth, {'attr': {'class': 'span1'}}) }}</div>
        </div>
        <div class="control-group">
            {{ form_label(form.biography, 'label_profile_biography' | trans({}, 'SonataUserBundle'), {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">{{ form_widget(form.biography) }}</div>
        </div>
        <div class="control-group">
            {{ form_label(form.locale, 'label_profile_locale' | trans({}, 'SonataUserBundle'), {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">{{ form_widget(form.locale) }}</div>
        </div>
        <div class="control-group">
            {{ form_label(form.timezone, 'label_profile_timezone' | trans({}, 'SonataUserBundle'), {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">{{ form_widget(form.timezone) }}</div>
        </div>
        <div class="control-group">
            {{ form_label(form.phone, 'label_profile_phone' | trans({}, 'SonataUserBundle'), {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">{{ form_widget(form.phone) }}</div>
        </div>

        {{ form_rest(form) }}
        
        <div class="control-group">
        	<div class="controls">
                <input class="btn btn-success" type="submit" name="submit" value="{{ 'sonata_user_submit'|trans({}, 'SonataUserBundle') }}" />
            </div>
        </div>
        
    </form>
</div>

